{% extends "base.html.twig" %}

{% block title %}Gérer les produits
{% endblock %}

{% block body %}

	<h1 class="text-center my-3">Gestions des produits</h1>

	{% include "include/_flashes.html.twig" %}

	<div class="row">
		<div class="col-6 mx-auto">

			<a href="{{ path('add_produits') }}" class="d-block mx-auto btn btn-primary col-6">Ajouter un produit <i class="fa fa-plus-circle"></i></a>

		</div>
	</div>

	<div class="row">
		<div class="col-11 mx-auto my-5">
			<table class="table table-hover">
				<thead class="table-dark">
					<tr>
						<th>#</th>
						<th>Titre</th>
						<th>Description</th>
						<th>Couleur</th>
						<th>Taille</th>
						<th>Genre</th>
						<th>Photo</th>
						<th>Prix</th>
						<th>Stock</th>
						<th>Ajouter le :</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for produit in produits %}
						<tr>
							<td>{{ produit.id }}</td>
							<td>{{ produit.title }}</td>
							<td>{{ produit.description }}</td>
							<td>{{ produit.color }}</td>
							<td>{{ produit.size }}</td>
							<td>{{ produit.gender }}</td>
							<td>{{ produit.photo }}</td>
							<td>{{ produit.price }}</td>
							<td>{{ produit.stock }}</td>
							<td>{{ produit.createdAt | date('d/m/Y') }}</td>
							<td>
								<a href="#">
									<i class="fa-solid fa-edit"></i>
								</a>
								<a href="#" class="text-danger" onclick="return confirm('Voulez-vous vraiment supprimer cet employé ?')">
									<i class="fa-solid fa-trash"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>


{% endblock %}
